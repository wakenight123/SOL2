  <div class="sign-up-form">
    <h1 class="signup">Sign Up</h1>

    <%=form_for :user do |f|%>
      <%=f.text_field :first_name, class: "first-name user-form", placeholder: "First Name"%><br><br>

      <%=f.text_field :last_name, class: "last-name user-form", placeholder: "Last Name"%><br><br>

      <%=f.text_field :email, class: "user-email user-form", placeholder: "Email"%><br><br>

      <%=f.password_field :password, class: "user-password user-form", placeholder: "Password"%> <br><br>

      <%=f.password_field :password_confirmation, class: "user-password-confirmation user-form", placeholder: "Password Confirmation"%><br><br>

      <%=f.submit "Submit", id: "submit"%>
    <%end%>
  </div> <!--sign-up-form-->

  <div class="login-instead">
    <h4>Already a user? &nbsp <%=link_to 'Log In', login_path%></h4>
  </div>
