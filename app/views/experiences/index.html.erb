<%=render 'application/header'%>

<div class="all-second-header">
  <h1> All Experiences <span class="count"> (<%=Experience.total_experiences%>)<span> </h1>
  <div class="add-experience">
    <%=link_to "/experiences/new" do%><h3> + Add Experience <%end%></h3>
  </div>
</div>

<div class="page-content">
  <div class="all-experiences">
    <%Experience.all.sort{|a,b| b.id <=> a.id}.each do |experience|%>
      <%=link_to "/experiences/#{experience.id}" do%>
        <div class ="experience-individual">
          <div class="top">
            <h3><%=experience.titlelize%></h3>
          </div>
          <%=link_to "/users/#{experience.user_id}" do%>
            <h4><%=experience.user.first_name.capitalize%></h4>
          <%end%>
          <%if experience.user == current_user%>

              <p class="list-edit">edit</p>

          <%end%>
        </div><!--experience-individual-->
      <%end%>
    <%end%>
  </div><!--all-experiences-->
</div><!--page-content-->
